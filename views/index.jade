extends layout

block content
    .main-wrapper
        .container
            .row
                .col-md-8.col-md-offset-2
                    .blog-posts
                        .col-md-12
                            for post in options.posts
                                .post-item
                                    .post-header
                                        .post-options
                                        a.post-img(href="#") <img src="/public/images/post/#{post.image}">
                                        .post-title
                                            h3 <a href="#">#{post.title}</a>
                                            span.data  <i class="fa fa-calendar-check-o" aria-hidden="true"></i> #{post.date}
                                    .post-content
                                        p #{post.description}
                                    a.read-next(href="#") Читать далее
                                    .post-footer
                                        a.like(href="#") <i class="fa fa-heart-o" aria-hidden="true"></i> <span>#{post.likes}</span>
                                        span.watches <i class="fa fa-eye" aria-hidden="true"></i> <span>#{post.watches}</span>
                                        .tags
                                            ul
                                                each tag in post.tags
                                                    li <a href="#"><i class="fa fa-hashtag" aria-hidden="true"></i> #{tag}</a>
